#main-navbar{
	background-color: blue;
	position: relative;
	text-align: center;
	width: 100%;
}

#navbar-container{
	position: relative;
}

#navbar-container ul{
	display: inline-block;
	list-style-type: none;
	margin: 0;
	overflow: hidden;
	padding: 0;
	position: relative;
}

#navbar-container ul li{
	display: block;
	left: 50%;
	right: 50%
}

#navbar-container ul li a{
	color: #fff;
	display: block;
	padding: 10px 20px;
	text-decoration: none;
}


#navbar-container ul li a:hover{
	background-color: #000;
	float: left;
}

#onpage{
	text-decoration: underline overline;
}

#sidebar{
	background-color: red;
	height: 100%;
	position: fixed;
	right: 0%;
	width: 20%;
}

#sidebar-container ul{
	list-style-type: none;
	padding: 0;
}

#sidebar-container ul li a{
  	color: #fff;
	display: block;
	padding: 15px 0;
	text-align: center;
	text-decoration: none;

}

#sidebar-container ul li a:hover{
	background-color: #000;
}